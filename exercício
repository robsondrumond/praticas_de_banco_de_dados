CREATE DATABASE vendas_sucos DEFAULT CHARACTER SET utf8;

CREATE TABLE clientes
(CPF VARCHAR(11) NOT NULL,
NOME VARCHAR(100),
ENDERECO VARCHAR(150),
BAIRRO VARCHAR(50),
ESTADO VARCHAR(50),
CEP VARCHAR(8),
DATA_NASCIMENTO DATE,
IDADE INT (11),
SEXO VARCHAR (1),
LIMITE_CREDITO FLOAT,
VOLUME_COMPRA FLOAT,
PRIMEIRA COMPRA BIT(1)
PRIMARY KEY CPF)

CREATE TABLE vendedores
(MATRICULA VARCHAR(5),
NOME VARCHAR(100),
BAIRRO VARCHAR(50),
COMISSAO FLOAT,
DATA_ADEMISSAO DATE,
FERIAS BIT(1)
PRIMARY KEY (MATRICULA));

CREATE TABLE TABELA_DE_VENDAS
(NUMERO VARCHAR(5) NOT NULL,
DATA_VENDA DATE NULL,
CPF VARCHAR(11) NOT NULL,
MATRICULA VARCHAR(5) NOT NULL,
IMPOSTO FLOAT NULL,
PRIMARY KEY (NUMERO));

CREATE TABLE produtos
(CODIGO VARCHAR(10) NOT NULL,
DESCRITOR VARCHAR(100) NULL,
SABOR VARCHAR(50) NULL,
TAMANHO VARCHAR(50) NULL,
EMBALAGEM VARCHAR(50) NULL,
PRECO_LISTA FLOAT),
PRIMARY KEY (CODIGO));

CREATE TABLE itens_notas
(NUMERO VARCHAR(5) NOT NULL,
CODIGO VARCHAR(10) NOT NULL,
QUANTIDADE INT(11),
PRECO FLOAT)
PRIMARY KEY (NUMERO, CODIGO));

#Alterando nome da tabela
ALTER TABLE tabela_de_vendas RENAME notas;

#Ligando as tabelas VENDAS e ITENS_NOTAS através do campo NUMERO.
USE vendas_sucos;

ALTER TABLE TABELA_DE_VENDAS ADD CONSTRAINT FK_CLIENTES
FOREIGN KEY (CPF) REFERENCES CLIENTES (CPF);

ALTER TABLE TABELA_DE_VENDAS ADD CONSTRAINT FK_VENDEDORES
FOREIGN KEY (MATRICULA) REFERENCES VENDEDORES (MATRICULA);COPIAR CÓDIGO


