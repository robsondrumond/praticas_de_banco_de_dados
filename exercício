CREATE SCHEMA vendas_sucos;
CREATE TABLE vendas
(NUMERO VARCHAR(5),
DATA_VENDA DATE,
CPF VARCHAR(11),
MATRICULA VARCHAR(5),
IMPOSTO FLOAT);

CREATE TABLE itens_notas
(NUMERO VARCHAR(5),
CODIGO VARCHAR(10),
QUANTIDADE INT(11),
PRECO FLOAT);

#Ligando as tabelas VENDAS e ITENS_NOTAS atrav√©s do campo NUMERO.
USE vendas_sucos;

ALTER TABLE itens_nota ADD CONSTRAINT FK_VENDAS
FOREIGN KEY (NUMERO)
REFERENCES VENDAS (NUMERO);

ALTER TABLE itens_notas ADD  CONSTRAINT FK_PRODUTOS
FOREIGN KEY (CODIGO)
REFERENCES PRODUTOS (CODIGO);
